{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}
  {%- apply spaceless -%}
    {{ package.name }}
    <small>
      {{ version.version }}
      {% if version.hasVersionAlias() %}
        / {{ version.versionAlias }}
      {% endif %}
    </small>
  {%- endapply -%}
{% endblock %}

{% block page_actions %}
  {% if is_granted('ROLE_ADMIN') %}
    <div class="global-actions">
      {% set updatePackageUrl = ea_url()
        .setRoute('dashboard_packages_update', {packageName: package.name}) %}
      <a class="btn btn-warning" href="{{ updatePackageUrl }}">
        <span class="action-label">Update</span>
      </a>
      {% set deletePackageUrl = ea_url()
        .setRoute('dashboard_packages_delete', {packageName: package.name}) %}
      <a class="btn btn-danger" href="{{ deletePackageUrl }}">
        <span class="action-label">Delete</span>
      </a>
    </div>
  {% endif %}
{% endblock %}

{% block page_content %}
  <ul class="nav nav-pills nav-justified d-grid d-md-flex gap-1 pb-3 mb-3 border-bottom">
    <li class="nav-item">
      {% set packageInfoUrl = ea_url()
        .setRoute('dashboard_packages_info', {packageName: package.name}) %}
      <a class="nav-link active" aria-current="page" href="{{ packageInfoUrl }}">Info</a>
    </li>
    <li class="nav-item">
      {% set packageVersionsUrl = ea_url()
        .setRoute('dashboard_packages_versions', {packageName: package.name}) %}
      <a class="nav-link" href="{{ packageVersionsUrl }}">Versions</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Dependants</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Statistics</a>
    </li>
  </ul>

  <div class="row mb-3">
    <div class="col-md-8">
      <div class="bg-body-secondary px-3 py-2 mb-3 rounded">
        <pre class="m-0"><code>composer require {{ package.name }}</code></pre>
      </div>

      <p class="lead mb-0">{{ version.description }}</p>
    </div>
    <div class="col-md-4">
      <div class="bg-body-secondary px-3 py-2 rounded">
        <div>
          <a href="{{ version.homepage ?? version.source.url }}">{{ version.homepage ?? version.source.url }}</a>
        </div>
        {% if package.mirrorRegistry %}
          <div>Mirrored from {{ package.mirrorRegistry.name }}</div>
        {% endif %}
        {% if version.homepage %}
          <div><a href="{{ version.homepage }}">Homepage</a></div>
        {% endif %}
        {% if version.source %}
          <div><a href="{{ version.source.url }}">Source</a></div>
        {% endif %}
        <div>
          License: {{ version.license|join(', ') }}
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between border-top border-bottom py-3 mb-3">
    <div><strong>{{ version.version }}</strong></div>
    {% if version.releasedAt %}
      <div>{{ version.releasedAt.format('Y-m-d H:i') }} UTC</div>
    {% endif %}
  </div>

  <div class="row border-bottom pb-3 mb-3">
    {{ _self.linkBlock("requires", version.require) }}
    {{ _self.linkBlock("requires (dev)", version.devRequire) }}
    {{ _self.linkBlock("provides", version.provide) }}
    {{ _self.suggestBlock("suggests", version.suggest) }}
    {{ _self.linkBlock("conflicts", version.conflict) }}
    {{ _self.linkBlock("replaces", version.replace) }}
  </div>

  {{ dump(version) }}
{% endblock %}

{% macro linkBlock(title, links) %}
  <div class="col-md-6 col-lg-4">
    <div class="h5">{{ title }}</div>

    <ul>
      {% for link in links %}
        <li>{{ link.packageName }}: {{ link.packageVersion }}</li>
      {% else %}
        <li>None</li>
      {% endfor %}
    </ul>
  </div>
{% endmacro %}

{% macro suggestBlock(title, links) %}
  <div class="col-md-6 col-lg-4">
    <div class="h5">{{ title }}</div>

    <ul>
      {% for link in links %}
        <li>{{ link.packageName }}: {{ link.packageVersion }}</li>
      {% else %}
        <li>None</li>
      {% endfor %}
    </ul>
  </div>
{% endmacro %}
