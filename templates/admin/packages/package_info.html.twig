{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}{{ package.name }} <small>{{ composerPackage.prettyVersion }}</small>{% endblock %}

{% block page_content %}
  <ul class="nav nav-pills nav-justified d-grid d-md-flex gap-1 mb-3">
    <li class="nav-item">
      {% set packageInfoUrl = ea_url()
        .setRoute('admin_packages_info', {packageName: package.name}) %}
      <a class="nav-link active" aria-current="page" href="{{ packageInfoUrl }}">Info</a>
    </li>
    <li class="nav-item">
      {% set packageVersionsUrl = ea_url()
        .setRoute('admin_packages_versions', {packageName: package.name}) %}
      <a class="nav-link" href="{{ packageVersionsUrl }}">Versions</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Dependants</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">Statistics</a>
    </li>
  </ul>

  <hr>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <div class="bg-body-secondary px-3 py-2 mb-3 rounded">
          <pre class="m-0"><code>composer require {{ package.name }}</code></pre>
        </div>

        <p class="lead">{{ composerPackage.description }}</p>
      </div>
      <div class="col-md-4">
        <div class="bg-body-secondary px-3 py-2 rounded">
          <div>
            <a href="{{ composerPackage.sourceUrl }}">{{ composerPackage.sourceUrl }}</a>
          </div>
          {% if package.mirrorRegistry %}
            <div>Mirrored from {{ package.mirrorRegistry.name }}</div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  {{ dump(composerPackage) }}

{% endblock %}
